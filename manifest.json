{
  "name": "Yanere Netflix Skipper",
  "description": "This extension skips the intro",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Activate Intro skipper"
  },
  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" },
  "permissions": ["https://www.netflix.com/*"]
}
